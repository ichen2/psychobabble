<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:paddingVertical="16dp"
        android:paddingHorizontal="32dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="WHEN YOU WOULD LIKE TO:" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/cttoad"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:padding="16dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner_shape"
                android:backgroundTint="#E49F44"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="CHANGE THE TONE OF A DISAGREEMENT" />
            </LinearLayout>
            <Space
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/gooaps"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:padding="16dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner_shape"
                android:backgroundTint="#4A9CA5"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="GET OUT OF A POWER STRUGGLE" />
            </LinearLayout>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/shb"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:padding="16dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner_shape"
                android:backgroundTint="#719391"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="SET HEALTHY BOUNDARIES" />
            </LinearLayout>
            <Space
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/ma"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:padding="16dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner_shape"
                android:backgroundTint="#7E7064"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="MAKE AMENDS" />
            </LinearLayout>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/iymtc"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:padding="16dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner_shape"
                android:backgroundTint="#4A9CA5"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="INVITE YOUR MATE TO CONNECT" />
            </LinearLayout>
            <Space
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/afu"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:padding="16dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner_shape"
                android:backgroundTint="#719391"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="ASK FOR UNDERSTANDING" />
            </LinearLayout>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/gu"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:padding="16dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner_shape"
                android:backgroundTint="#719391"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="GIVE UNDERSTANDING" />
            </LinearLayout>
            <Space
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/oypitp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:padding="16dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner_shape"
                android:backgroundTint="#7E7064"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:text="OWN YOUR PART IN THE PROBLEM" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>